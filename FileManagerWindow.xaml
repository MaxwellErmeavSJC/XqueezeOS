<Window x:Class="XqueezeOS.FileManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="File Manager - XqueezeOS" 
        Height="600" 
        Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#2C2C2C">

    <Window.Resources>
        <!-- Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1E8AD6"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#555555"/>
                    <Setter Property="Foreground" Value="#999999"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#3C3C3C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <!-- ListBox Style -->
        <Style x:Key="ModernListBox" TargetType="ListBox">
            <Setter Property="Background" Value="#252526"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Border Grid.Row="0" Background="#1E1E1E" Padding="15,10">
            <TextBlock Text="📁 File Manager" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="White"/>
        </Border>

        <!-- Toolbar -->
        <Border Grid.Row="1" Background="#333333" Padding="10">
            <StackPanel Orientation="Horizontal">
                <Button x:Name="btnNewFile" 
                        Content="➕ New File" 
                        Style="{StaticResource ModernButton}"
                        Click="BtnNewFile_Click"/>
                <Button x:Name="btnOpenFile" 
                        Content="📂 Open File" 
                        Style="{StaticResource ModernButton}"
                        Click="BtnOpenFile_Click"/>
                <Button x:Name="btnRenameFile" 
                        Content="✏️ Rename" 
                        Style="{StaticResource ModernButton}"
                        Click="BtnRenameFile_Click"
                        IsEnabled="False"/>
                <Button x:Name="btnDeleteFile" 
                        Content="🗑️ Delete" 
                        Style="{StaticResource ModernButton}"
                        Background="#CC0000"
                        Click="BtnDeleteFile_Click"
                        IsEnabled="False"/>
                <Button x:Name="btnRefresh" 
                        Content="🔄 Refresh" 
                        Style="{StaticResource ModernButton}"
                        Click="BtnRefresh_Click"/>
                <Separator Width="20" Background="Transparent"/>
                <Button x:Name="btnShowInfo" 
                        Content="ℹ️ File Info" 
                        Style="{StaticResource ModernButton}"
                        Background="#4A5568"
                        Click="BtnShowInfo_Click"
                        IsEnabled="False"/>
            </StackPanel>
        </Border>

        <!-- File List -->
        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Files ListView -->
            <Border Grid.Column="0" 
                    BorderBrush="#3F3F46" 
                    BorderThickness="1"
                    Background="#252526">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#1E1E1E" Padding="10,5">
                        <TextBlock Text="Files in XqueezeOS Storage" 
                                   Foreground="White" 
                                   FontWeight="SemiBold"/>
                    </Border>

                    <ListBox x:Name="lstFiles" 
                             Grid.Row="1"
                             Style="{StaticResource ModernListBox}"
                             SelectionChanged="LstFiles_SelectionChanged"
                             MouseDoubleClick="LstFiles_MouseDoubleClick">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <TextBlock Text="{Binding Icon}" 
                                               FontSize="20" 
                                               Margin="0,0,10,0"/>
                                    <StackPanel>
                                        <TextBlock Text="{Binding FileName}" 
                                                   FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding FileInfo}" 
                                                   FontSize="11" 
                                                   Foreground="#AAAAAA"/>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <GridSplitter Grid.Column="1" 
                          Width="5" 
                          HorizontalAlignment="Stretch" 
                          Background="#3F3F46"/>

            <!-- File Details Panel -->
            <Border Grid.Column="2" 
                    BorderBrush="#3F3F46" 
                    BorderThickness="1"
                    Background="#1E1E1E">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="15">
                        <TextBlock Text="File Details" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="White"
                                   Margin="0,0,0,15"/>

                        <TextBlock x:Name="txtFileName" 
                                   Text="No file selected" 
                                   Foreground="#CCCCCC"
                                   TextWrapping="Wrap"
                                   Margin="0,5"/>

                        <Separator Background="#3F3F46" Margin="0,10"/>

                        <StackPanel x:Name="pnlFileDetails" Visibility="Collapsed">
                            <TextBlock Text="File Size:" 
                                       Foreground="#999999" 
                                       FontSize="12"
                                       Margin="0,5,0,2"/>
                            <TextBlock x:Name="txtFileSize" 
                                       Foreground="White" 
                                       FontSize="13"
                                       Margin="0,0,0,10"/>

                            <TextBlock Text="Created:" 
                                       Foreground="#999999" 
                                       FontSize="12"
                                       Margin="0,5,0,2"/>
                            <TextBlock x:Name="txtCreated" 
                                       Foreground="White" 
                                       FontSize="13"
                                       Margin="0,0,0,10"/>

                            <TextBlock Text="Modified:" 
                                       Foreground="#999999" 
                                       FontSize="12"
                                       Margin="0,5,0,2"/>
                            <TextBlock x:Name="txtModified" 
                                       Foreground="White" 
                                       FontSize="13"
                                       Margin="0,0,0,10"/>

                            <TextBlock Text="File Type:" 
                                       Foreground="#999999" 
                                       FontSize="12"
                                       Margin="0,5,0,2"/>
                            <TextBlock x:Name="txtFileType" 
                                       Foreground="White" 
                                       FontSize="13"
                                       Margin="0,0,0,10"/>

                            <TextBlock Text="Full Path:" 
                                       Foreground="#999999" 
                                       FontSize="12"
                                       Margin="0,5,0,2"/>
                            <TextBlock x:Name="txtFullPath" 
                                       Foreground="White" 
                                       FontSize="11"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,10"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#007ACC" Padding="10,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="txtStatus" 
                           Grid.Column="0"
                           Text="Ready" 
                           Foreground="White" 
                           VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="Total Files: " 
                               Foreground="White" 
                               VerticalAlignment="Center"/>
                    <TextBlock x:Name="txtFileCount" 
                               Text="0" 
                               Foreground="White" 
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="0,0,20,0"/>

                    <TextBlock Text="Storage Used: " 
                               Foreground="White" 
                               VerticalAlignment="Center"/>
                    <TextBlock x:Name="txtStorageUsed" 
                               Text="0 bytes" 
                               Foreground="White" 
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>

