<Window x:Class="XqueezeOS.CameraWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Camera - XqueezeOS" 
        Height="700" 
        Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E">

    <Window.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1E8AD6"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#555555"/>
                    <Setter Property="Foreground" Value="#999999"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Border Grid.Row="0" Background="#0D0D0D" Padding="15,10">
            <TextBlock Text="📷 Camera" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="White"/>
        </Border>

        <!-- Camera Preview Area -->
        <Grid Grid.Row="1" Background="#000000">
            <!-- Video Preview (will be populated programmatically) -->
            <Border x:Name="borderVideoPreview" 
                    Background="#1A1A1A"
                    BorderBrush="#333333"
                    BorderThickness="2"
                    Margin="20">
                <Grid>
                    <!-- Placeholder when camera is not active -->
                    <StackPanel x:Name="pnlCameraPlaceholder" 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center">
                        <TextBlock Text="📷" 
                                   FontSize="80" 
                                   HorizontalAlignment="Center"
                                   Foreground="#666666"
                                   Margin="0,0,0,20"/>
                        <TextBlock Text="Camera Preview" 
                                   FontSize="24" 
                                   Foreground="#666666"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Click 'Start Camera' to begin" 
                                   FontSize="14" 
                                   Foreground="#444444"
                                   HorizontalAlignment="Center"
                                   Margin="0,10,0,0"/>
                    </StackPanel>

                    <!-- Image preview for captured photo -->
                    <Image x:Name="imgPreview" 
                           Visibility="Collapsed"
                           Stretch="Uniform"/>

                    <!-- Capture animation overlay -->
                    <Border x:Name="flashOverlay" 
                            Background="White" 
                            Opacity="0"
                            Visibility="Collapsed"/>
                </Grid>
            </Border>

            <!-- Camera info overlay -->
            <Border VerticalAlignment="Top" 
                    HorizontalAlignment="Right"
                    Background="#CC000000"
                    Padding="10"
                    Margin="30"
                    CornerRadius="4">
                <StackPanel>
                    <TextBlock x:Name="txtCameraStatus" 
                               Text="Camera: Inactive" 
                               Foreground="White" 
                               FontSize="12"/>
                    <TextBlock x:Name="txtResolution" 
                               Text="Resolution: N/A" 
                               Foreground="#CCCCCC" 
                               FontSize="11"
                               Margin="0,5,0,0"/>
                    <TextBlock x:Name="txtCaptureCount" 
                               Text="Photos Captured: 0" 
                               Foreground="#CCCCCC" 
                               FontSize="11"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Camera Controls -->
        <Border Grid.Row="2" Background="#2C2C2C" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Controls -->
                <StackPanel Grid.Column="0" 
                            Orientation="Horizontal"
                            HorizontalAlignment="Left">
                    <Button x:Name="btnStartCamera" 
                            Content="▶️ Start Camera" 
                            Style="{StaticResource ModernButton}"
                            Background="#28A745"
                            Click="BtnStartCamera_Click"/>
                    <Button x:Name="btnStopCamera" 
                            Content="⏹️ Stop Camera" 
                            Style="{StaticResource ModernButton}"
                            Background="#DC3545"
                            Click="BtnStopCamera_Click"
                            IsEnabled="False"/>
                </StackPanel>

                <!-- Center Controls - Capture Button -->
                <Button x:Name="btnCapture" 
                        Grid.Column="1"
                        Content="📸 Capture Photo" 
                        Style="{StaticResource ModernButton}"
                        Background="#007ACC"
                        FontSize="16"
                        Padding="30,15"
                        Click="BtnCapture_Click"
                        IsEnabled="False"/>

                <!-- Right Controls -->
                <StackPanel Grid.Column="2" 
                            Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <Button x:Name="btnScreenshot" 
                            Content="🖥️ Screenshot" 
                            Style="{StaticResource ModernButton}"
                            Background="#6C757D"
                            Click="BtnScreenshot_Click"/>
                    <Button x:Name="btnOpenGallery" 
                            Content="🖼️ Gallery" 
                            Style="{StaticResource ModernButton}"
                            Background="#17A2B8"
                            Click="BtnOpenGallery_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#007ACC" Padding="15,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="txtStatus" 
                           Grid.Column="0"
                           Text="Ready to capture" 
                           Foreground="White" 
                           VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="Storage: " 
                               Foreground="White" 
                               VerticalAlignment="Center"/>
                    <TextBlock x:Name="txtStoragePath" 
                               Text="My Documents/XqueezeOS/Photos" 
                               Foreground="White" 
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
