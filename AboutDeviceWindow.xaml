<Window x:Class="XqueezeOS.AboutDeviceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About Device"
        WindowStartupLocation="CenterScreen"
        Width="400"
        Height="300"
        Background="#FF0F1722"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <StackPanel>

            <!-- OS Version -->
            <TextBlock x:Name="OSVersionText"
                       Text="OS Version: "
                       FontSize="14"
                       Foreground="White"
                       Margin="0,0,0,10"/>

            <!-- Device Name -->
            <TextBlock x:Name="DeviceNameText"
                       Text="Device Name: "
                       FontSize="14"
                       Foreground="White"
                       Margin="0,0,0,10"/>

            <!-- Active User -->
            <TextBlock x:Name="UserCountText"
                       Text="Active User: "
                       FontSize="14"
                       Foreground="White"
                       Margin="0,0,0,10"/>

            <!-- Total Memory -->
            <TextBlock x:Name="MemoryText"
                       Text="Memory: "
                       FontSize="14"
                       Foreground="White"
                       Margin="0,0,0,10"/>

            <!-- Storage Info -->
            <TextBlock x:Name="StorageText"
                       Text="Storage: "
                       FontSize="14"
                       Foreground="White"
                       Margin="0,0,0,10"/>
        </StackPanel>
    </Grid>
</Window>
