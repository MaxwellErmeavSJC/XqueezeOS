<Window x:Class="XqueezeOS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="XqueezeOS Desktop"
        Height="540"
        Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#FF0F1722">

    <Grid>
        <!-- Background Image -->
        <Image Source="/Assets/mainscreen.jpg" Stretch="Fill"/>

        <DockPanel>
            <!-- Top Bar -->
            <Border DockPanel.Dock="Top" Height="60" Background="#AA0B1A26" Padding="8">
                <DockPanel>
                    <TextBlock FontWeight="Bold" VerticalAlignment="Center" Foreground="White" FontSize="16">
                        XqueezeOS
                    </TextBlock>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <!-- Profile Card -->
                        <Border Background="#20242A"
                                CornerRadius="12"
                                Padding="10"
                                Margin="0,0,10,0"
                                Width="260"
                                Height="70">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <Ellipse Width="50" Height="50" Stroke="#4B8BF5" StrokeThickness="2">
                                    <Ellipse.Fill>
                                        <ImageBrush ImageSource="/Assets/user.png"/>
                                    </Ellipse.Fill>
                                </Ellipse>
                                <StackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                                    <TextBlock x:Name="ProfileUsername" FontSize="14" FontWeight="Bold" Foreground="White"/>
                                    <TextBlock x:Name="DeviceNameText" FontSize="11" Foreground="#B0B0B0"/>
                                    <TextBlock Text="Status: Active User" FontSize="11" Foreground="#7CFC98"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <Button Content="About Device" Click="AboutBtn_Click" Margin="4,0" VerticalAlignment="Center"/>
                    </StackPanel>
                </DockPanel>
            </Border>

            <!-- Desktop Area -->
            <WrapPanel Margin="12" x:Name="DesktopArea">

                <!-- App Buttons -->
                <Button Width="120" Height="100" Margin="8" Click="OpenAbout_Click">
                    <StackPanel>
                        <Image Source="/Assets/about.png" Width="56" Height="56"/>
                        <TextBlock Text="About Device" HorizontalAlignment="Center" Foreground="#FFE6EEF2"/>
                    </StackPanel>
                </Button>

                <Button Width="120" Height="100" Margin="8" Click="OpenFileManager_Click">
                    <StackPanel>
                        <Image Source="/Assets/filemanager.png" Width="56" Height="56"/>
                        <TextBlock Text="File Manager" HorizontalAlignment="Center" Foreground="#FFE6EEF2"/>
                    </StackPanel>
                </Button>

                <Button Width="120" Height="100" Margin="8" Click="OpenCamera_Click">
                    <StackPanel>
                        <Image Source="/Assets/camera.png" Width="56" Height="56"/>
                        <TextBlock Text="Camera" HorizontalAlignment="Center" Foreground="#FFE6EEF2"/>
                    </StackPanel>
                </Button>

                <Button Width="120" Height="100" Margin="8" Click="OpenGallery_Click">
                    <StackPanel>
                        <Image Source="/Assets/gallery.png" Width="56" Height="56"/>
                        <TextBlock Text="Gallery" HorizontalAlignment="Center" Foreground="#FFE6EEF2"/>
                    </StackPanel>
                </Button>

                <Button Width="120" Height="100" Margin="8" Click="OpenContacts_Click">
                    <StackPanel>
                        <Image Source="/Assets/contacts.png" Width="56" Height="56"/>
                        <TextBlock Text="Contacts" HorizontalAlignment="Center" Foreground="#FFE6EEF2"/>
                    </StackPanel>
                </Button>

                <Button Width="120" Height="100" Margin="8" Click="OpenCalculator_Click">
                    <StackPanel>
                        <Image Source="/Assets/calculator.png" Width="56" Height="56"/>
                        <TextBlock Text="Calculator" HorizontalAlignment="Center" Foreground="#FFE6EEF2"/>
                    </StackPanel>
                </Button>

            </WrapPanel>
        </DockPanel>
    </Grid>
</Window>

